{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "buildCommand": "cd ../.. && npm run db:generate && npm run db:migrate:deploy && npm run build",
    "devCommand": "cd ../.. && npm run dev:web",
    "installCommand": "npm install --legacy-peer-deps --include dev",
    "framework": "nextjs",
    "outputDirectory": ".next",
    "regions": ["iad1"],
    "functions": {
        "apps/web/src/app/api/**/*.ts": {
            "maxDuration": 60
        }
    }
}
