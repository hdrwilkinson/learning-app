{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "dist/**"],
            "env": [
                "DATABASE_URL",
                "DIRECT_URL",
                "POSTGRES_URL",
                "PRISMA_DATABASE_URL",
                "NEXTAUTH_SECRET",
                "NEXTAUTH_URL",
                "NEXT_PUBLIC_API_URL"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "test": {
            "dependsOn": ["^build"],
            "outputs": ["coverage/**"]
        }
    }
}
